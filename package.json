    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^18.2.4",
    "electron-devtools-installer": "^3.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
